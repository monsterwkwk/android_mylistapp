<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:scrollbarThumbVertical="@color/colorAccent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="7dp"
        app:cardCornerRadius="8dp"
        android:background="@color/card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:context=".DetailHeroActivity">

            <TextView
                android:id="@+id/tvHeroDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/base"
                android:text="@string/hero_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <ImageView
                android:id="@+id/ivHeroDetailImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/tvHeroDetailName"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tvHeroDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivHeroDetailImage"
                android:text="@string/hero_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</ScrollView>